{% extends "base.html.twig" %}

   {% block body %}
    <div class="header">
      <h2>CRUD App</h2>
      <form action="{{path('create')}}" method="POST">
        <input type="text" name="title" id="myInput" placeholder="Task title..." />
        <button type="submit" class="addBtn">Add a task</button>
      </form>
    </div>

    <ul>
    {% for task in tasks %}
      <li {% if task.status %} class="checked" {% endif %} >
        <a href="{{path('update', {id: task.id })}}"> <span class="task-list-item">{{ task.title }}</span> </a
        ><a onclick="return confirm('Are you sure to delete?')" href="{{path('delete', {id: task.id })}}"><span class="close">X</span></a>
      </li>
    {% endfor %}
    </ul>

    {% endblock %}